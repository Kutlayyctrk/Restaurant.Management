
@model HrListPageVM

@{
    ViewData["Title"] = "Personel Listesi";
}

<h2>Personel Listesi</h2>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="personelTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Eklenme</th>
                        <th>Roller</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Persons)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.UserName</td>
                            <td>@p.Email</td>
                            <td>@p.InsertedDate.ToString("yyyy-MM-dd")</td>
                            <td>@p.Roles</td>
                            <td>
                                <a class="btn btn-sm btn-primary"
                                   asp-area="Manager"
                                   asp-controller="Hr"
                                   asp-action="Edit"
                                   asp-route-id="@p.Id">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
            $('#personelTable').DataTable();
        });
    </script>
}