
@model ProfileCompleteListVm

@{
    ViewData["Title"] = "Profil Tamamlama";
}

<h2>Profil Tamamlama</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Eklenme</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.InsertedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-area="Manager" asp-controller="Hr" asp-action="CompleteProfile" asp-route-id="@user.Id"
                       class="btn btn-sm btn-primary">
                        Profil Tamamla
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>