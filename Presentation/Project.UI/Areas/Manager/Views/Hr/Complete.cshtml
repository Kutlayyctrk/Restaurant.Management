
@model CompleteProfileVm

@{
    ViewData["Title"] = "Profil Oluştur - " + Model.UserName;
}

<h2>Profil Oluştur: @Model.UserName</h2>
<input asp-for="AppUserId" type="hidden" />
<select asp-for="SelectedRoleId" asp-items="Model.Roles"></select>
<div class="card">
    <div class="card-body">
        <form asp-action="Complete" method="post" asp-area="Manager" asp-controller="Hr">
            <input type="hidden" asp-for="AppUserId" />
            <div class="mb-3">
                <label class="form-label">Kullanıcı</label>
                <input class="form-control" value="@Model.UserName" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" value="@Model.Email" disabled />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label">Ad</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label">Soyad</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TCKNo" class="form-label">TCKNo</label>
                    <input asp-for="TCKNo" class="form-control" />
                    <span asp-validation-for="TCKNo" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Salary" class="form-label">Maaş</label>
                    <div class="input-group">
                        <span class="input-group-text">₺</span>
                        <input asp-for="Salary" class="form-control" />
                    </div>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SelectedRoleId" class="form-label">Rol</label>
                    <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control">
                        <option value="">-- Rol Seçiniz --</option>
                    </select>
                    <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="BirthDate" class="form-label">Doğum Tarihi</label>
                    <input asp-for="BirthDate" type="date" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="HireDate" class="form-label">İşe Giriş Tarihi</label>
                <input asp-for="HireDate" type="date" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="CompleteProfile" class="btn btn-outline-secondary">Geri</a>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}