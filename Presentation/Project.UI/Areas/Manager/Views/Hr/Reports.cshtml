@using Project.UI.Areas.Manager.Models.HRVMs
@model ReportVm

<h2>Raporlar</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header">Toplam Personel</div>
            <div class="card-body">
                <h3>@Model.TotalUsers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header">Aktif Personel</div>
            <div class="card-body">
                <h3>@Model.ActiveUsers</h3>
            </div>
        </div>
    </div>
</div>

<h4>Rol Bazlı Dağılım</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Rol</th>
            <th>Kişi Sayısı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.RoleDistribution)
        {
            <tr>
                <td>@role.Key</td>
                <td>@role.Value</td>
            </tr>
        }
    </tbody>
</table>
