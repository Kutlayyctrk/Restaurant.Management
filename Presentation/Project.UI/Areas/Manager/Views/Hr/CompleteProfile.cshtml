
@model CandidatePageVm

@{
    ViewData["Title"] = "Profil Tamamla - Bekleyen Kişiler";
}

<h2>Profil Tamamla</h2>

<div class="card">
    <div class="card-body">
        @if (!Model.Candidates.Any())
        {
            <div class="alert alert-info">Tamamlanacak profil bulunmamaktadır.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanıcı</th>
                            <th>Email</th>
                            <th>Eklenme</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Candidates)
                        {
                            <tr>
                                <td>@c.AppUserId</td>
                                <td>@c.UserName</td>
                                <td>@c.Email</td>
                                <td>@c.InsertedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       asp-area="Manager"
                                       asp-controller="Hr"
                                       asp-action="Complete"
                                       asp-route-userId="@c.AppUserId">
                                        <i class="fas fa-user-plus"></i> Tamamla
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>