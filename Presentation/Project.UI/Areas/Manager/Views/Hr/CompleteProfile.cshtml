@using Project.UI.Areas.Manager.Models.HRVMs
@model ProfileCompleteVm

<h2>Profil Tamamlama</h2>

<form asp-action="CompleteProfile" method="post">
    <input type="hidden" asp-for="AppUserId" />

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>TCKNo</label>
        <input asp-for="TCKNo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Maaş</label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="form-group">
        <label>Doğum Tarihi</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>İşe Başlama Tarihi</label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>