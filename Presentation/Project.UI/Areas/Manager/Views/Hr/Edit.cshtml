@model PersonelEditVm
@using System.Globalization;


@if (TempData["Success"] != null)
{
    <script>alert('@TempData["Success"]');</script>
}

@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-edit mr-2"></i> Personel Bilgilerini Güncelle</h4>
                </div>
                <div class="card-body">
                   
                    <form asp-action="Edit" method="post" asp-area="Manager" asp-controller="Hr">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AppUserId" />
                        <input type="hidden" asp-for="ProfileId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label font-weight-bold">Ad</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label font-weight-bold">Soyad</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TCKNo" class="form-label font-weight-bold">TCKNo</label>
                                <input asp-for="TCKNo" class="form-control" />
                                <span asp-validation-for="TCKNo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Salary" class="form-label font-weight-bold">Maaş</label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Salary"
                                           class="form-control"
                                           type="text"
                                           value="@(Model.Salary.ToString("F2", CultureInfo.InvariantCulture))" />



                                </div>
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BirthDate" class="form-label font-weight-bold">Doğum Tarihi</label>
                                <input asp-for="BirthDate" type="date" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="HireDate" class="form-label font-weight-bold">İşe Giriş Tarihi</label>
                                <input asp-for="HireDate" type="date" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="PersonelList" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-success px-5">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>

                  
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <label class="form-label font-weight-bold">Mevcut Roller</label>
                            <ul class="list-group">
                                @if (Model.RoleList.Any())
                                {
                                    @foreach (var role in Model.RoleList)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @role.RoleName
                                            <form asp-action="RemoveRoleFromEdit" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@Model.AppUserId" />
                                                <input type="hidden" name="roleId" value="@role.RoleId" />
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Rolü silmek istediğinizden emin misiniz?')">
                                                    <i class="fas fa-trash"></i> Sil
                                                </button>
                                            </form>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item text-muted">Rol yok</li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label font-weight-bold">Yeni Rol Ekle</label>
                            <form asp-action="AddRoleFromEdit" method="post" style="display:flex;">
                                <input type="hidden" name="userId" value="@Model.AppUserId" />
                                <select name="roleId" asp-items="Model.Roles" class="form-control" style="flex:1;">
                                    <option value="">-- Rol Seçiniz --</option>
                                </select>
                                <button type="submit" class="btn btn-primary ml-2">Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@if (TempData["Error"] != null)
{
    <script>alert('@TempData["Error"]');</script>
}