@model Project.UI.Areas.Manager.Models.AppUserVMs.PersonelEditVm

<div class="alert alert-info">
    Gelen Ad: @Model.FirstName <br />
    Gelen Maaş: @Model.Salary
</div>

@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-edit mr-2"></i> Personel Bilgilerini Güncelle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" asp-area="Manager" asp-controller="Hr">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AppUserId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label font-weight-bold">Ad</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Adını giriniz" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label font-weight-bold">Soyad</label>
                                <input asp-for="LastName" class="form-control" placeholder="Soyadını giriniz" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TCKNo" class="form-label font-weight-bold">TCKNo</label>
                                <input asp-for="TCKNo" class="form-control" placeholder="11 haneli TCKNo" />
                                <span asp-validation-for="TCKNo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Salary" class="form-label font-weight-bold">Maaş</label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input name="Salary"
                                           id="Salary"
                                           class="form-control"
                                           type="number"
                                           step="0.01"
                                           value="@(Model?.Salary.ToString(CultureInfo.InvariantCulture) ?? String.Empty)" />
                                </div>
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SelectedRoleId" class="form-label font-weight-bold">Personel Rolü</label>
                                <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control">
                                    <option value="">-- Rol Seçiniz --</option>
                                </select>
                                <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BirthDate" class="form-label font-weight-bold">Doğum Tarihi</label>
                                <input asp-for="BirthDate" type="date" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HireDate" class="form-label font-weight-bold">İşe Giriş Tarihi</label>
                                <input asp-for="HireDate" type="date" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="PersonelList" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-success px-5">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}