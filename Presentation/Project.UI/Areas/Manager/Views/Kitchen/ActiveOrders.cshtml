@model List<OrderVm>

<h2>Aktif Siparişler</h2>

@foreach (var order in Model)
{
    <div class="card mb-3">
        <div class="card-header">
            <strong>@order.TableName</strong> - Toplam: @order.TotalPrice ₺
        </div>
        <div class="card-body">
            <ul>
                @foreach (var detail in order.OrderDetails)
                {
                    <li>@detail.ProductName - @detail.Quantity x @detail.UnitPrice ₺ (@detail.DetailState)</li>
                }
            </ul>
            <form asp-action="CompleteOrder" method="post">
                <input type="hidden" name="orderId" value="@order.OrderId" />
                <button type="submit" class="btn btn-success">Tamamla</button>
            </form>
        </div>
    </div>
}