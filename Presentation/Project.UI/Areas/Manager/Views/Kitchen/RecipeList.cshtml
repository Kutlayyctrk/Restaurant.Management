@model List<Project.UI.Areas.Manager.Models.KitchenVMs.RecipeListVm>

<h2>Reçete Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Ürün</th>
            <th>Kategori</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="EditRecipe" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateRecipe" class="btn btn-primary">Yeni Reçete Ekle</a>