@model Project.Application.DTOs.RecipeDTO

<h2>Reçete Düzenle</h2>

<form asp-area="Manager" asp-controller="Kitchen" asp-action="EditRecipe" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name">Reçete Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description">Açıklama</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductId">Ana Ürün</label>
        <select asp-for="ProductId" asp-items="ViewBag.ProductList" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control"></select>
    </div>

    <h4>Malzemeler</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Malzeme</th>
                <th>Miktar</th>
                <th>Birim</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="recipeItems">
            @for (int i = 0; i < Model.RecipeItem.Count; i++)
            {
                <tr>
                    <td>
                      
                        <select asp-for="RecipeItem[@i].ProductId" asp-items="ViewBag.ProductList" class="form-control">
                            <option value="">-- Malzeme Seçin --</option>
                        </select>
                    </td>
                    <td>
                        <input asp-for="RecipeItem[@i].Quantity" class="form-control" />
                    </td>
                    <td>
                     
                        <select asp-for="RecipeItem[@i].UnitId" asp-items="ViewBag.UnitList" class="form-control">
                            <option value="">-- Birim Seçin --</option>
                        </select>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="this.closest('tr').remove()">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-secondary" onclick="addItem()">+ Malzeme Ekle</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-area="Manager" asp-controller="Kitchen" asp-action="RecipeList" class="btn btn-secondary">İptal</a>
    </div>
</form>