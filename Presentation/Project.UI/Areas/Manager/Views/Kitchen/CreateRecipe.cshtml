@model Project.Application.DTOs.RecipeDTO
@if (TempData["DebugInfo"] != null)
{
    <div class="alert alert-info">@TempData["DebugInfo"]</div>
}
@if (TempData["ValidationErrors"] != null)
{
    <div class="alert alert-danger">@TempData["ValidationErrors"]</div>
}

<h2>Yeni Reçete Oluştur</h2>

<form asp-area="Manager" asp-controller="Kitchen" asp-action="CreateRecipe" method="post">
    <div class="form-group mb-3">
        <label for="Name">Reçete Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="Description">Açıklama</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="ProductId">Ana Ürün</label>
        <select asp-for="ProductId" asp-items="ViewBag.ProductList" class="form-control">
            <option value="">-- Ürün Seçin --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
            <option value="">-- Kategori Seçin --</option>
        </select>
    </div>

    <h4>Malzemeler</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Malzeme</th>
                <th>Miktar</th>
                <th>Birim</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="recipeItems">
            <tr>
                <td>
                    <select name="RecipeItem[0].ProductId" class="form-control" asp-items="ViewBag.ProductList">
                        <option value="">-- Malzeme Seçin --</option>
                    </select>
                </td>
                <td><input name="RecipeItem[0].Quantity" class="form-control" /></td>
                <td>
                    <select name="RecipeItem[0].UnitId" class="form-control" asp-items="ViewBag.UnitList">
                        <option value="">-- Birim Seçin --</option>
                    </select>
                </td>
                <td><button type="button" class="btn btn-danger" onclick="this.closest('tr').remove()">Sil</button></td>
            </tr>
        </tbody>
    </table>
    <button type="button" class="btn btn-secondary" onclick="addItem()">+ Malzeme Ekle</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-area="Manager" asp-controller="Kitchen" asp-action="RecipeList" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <script>
        let itemIndex = 1;
        function addItem() {
            const row = `<tr>
                <td>
                    <select name="RecipeItem[${itemIndex}].ProductId" class="form-control">
                        <option value="">-- Malzeme Seçin --</option>
                        @foreach (var p in (IEnumerable<SelectListItem>)ViewBag.ProductList)
                        {
                                <option value="@p.Value">@p.Text</option>
                        }
                    </select>
                </td>
                <td><input name="RecipeItem[${itemIndex}].Quantity" class="form-control" /></td>
                <td>
                    <select name="RecipeItem[${itemIndex}].UnitId" class="form-control">
                        <option value="">-- Birim Seçin --</option>
                        @foreach (var u in (IEnumerable<SelectListItem>)ViewBag.UnitList)
                        {
                                <option value="@u.Value">@u.Text</option>
                        }
                    </select>
                </td>
                <td><button type="button" class="btn btn-danger" onclick="this.closest('tr').remove()">Sil</button></td>
            </tr>`;
            document.getElementById("recipeItems").insertAdjacentHTML("beforeend", row);
            itemIndex++;
        }
    </script>
}