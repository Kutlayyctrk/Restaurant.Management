@model EditPersonnelVm
@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="mb-4 text-center">
        <h2 class="fw-light">Personel Düzenle</h2>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <form asp-action="EditPersonnel" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body p-4">
            <div class="row g-4">
               
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-bold small text-muted">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold small text-muted">E-posta</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold small text-muted">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold small text-muted">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-0">
                        <label asp-for="SelectedRoleId" class="form-label fw-bold small text-muted">Rol</label>
                        <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-select"></select>
                        <span asp-validation-for="SelectedRoleId" class="text-danger small"></span>
                    </div>
                </div>

               
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TCKNo" class="form-label fw-bold small text-muted">T.C. Kimlik No</label>
                        <input asp-for="TCKNo" class="form-control" />
                        <span asp-validation-for="TCKNo" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Salary" class="form-label fw-bold small text-muted">Maaş</label>
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="HireDate" class="form-label fw-bold small text-muted">İşe Giriş Tarihi</label>
                        <input asp-for="HireDate" class="form-control" type="date" />
                        <span asp-validation-for="HireDate" class="text-danger small"></span>
                    </div>
                    <div class="mb-0">
                        <label asp-for="BirthDate" class="form-label fw-bold small text-muted">Doğum Tarihi</label>
                        <input asp-for="BirthDate" class="form-control" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 d-flex justify-content-between align-items-center py-3">
          
            <div>
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="if(confirm('Personeli pasife almak istediğinize emin misiniz?')) { document.getElementById('softDeleteForm').submit(); }">Pasife Al</button>
                <button type="button" class="btn btn-outline-danger btn-sm ms-1" onclick="if(confirm('Personeli KALICI olarak silmek istediğinize emin misiniz?')) { document.getElementById('hardDeleteForm').submit(); }">Sil</button>
            </div>

         
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">Kaydet</button>
                <a asp-action="PersonnelManagement" class="btn btn-secondary px-4">İptal</a>
            </div>
        </div>
    </form>

 
    <form id="softDeleteForm" asp-action="SoftDeletePersonnel" method="post" style="display:none;">
        <input type="hidden" name="id" value="@Model.Id" />
    </form>
    <form id="hardDeleteForm" asp-action="HardDeletePersonnel" method="post" style="display:none;">
        <input type="hidden" name="id" value="@Model.Id" />
    </form>
</div>