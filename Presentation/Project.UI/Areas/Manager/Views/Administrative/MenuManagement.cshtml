
@model MenuListVm

@{
    ViewData["Title"] = "Menü Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Menü Yönetimi</h2>
    <a class="btn btn-primary" asp-action="AddMenu">Yeni Menü Ekle</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Adı</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Aktif mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model.Menus)
        {
            <tr>
                <td>@menu.MenuName</td>
                <td>@menu.StartDate.ToShortDateString()</td>
                <td>@menu.EndDate.ToShortDateString()</td>
                <td>
                    @if (menu.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="MenuDetail" asp-route-id="@menu.Id">Detay</a>
                    <a class="btn btn-warning btn-sm" asp-action="EditMenu" asp-route-id="@menu.Id">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>