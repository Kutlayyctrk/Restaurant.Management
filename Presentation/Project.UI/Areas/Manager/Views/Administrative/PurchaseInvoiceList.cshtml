@model PurchaseInvoiceListVm

@{
    ViewData["Title"] = "Alım Faturaları";
}

<div class="container-fluid mt-4 px-4">
    
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="fw-light">Alım Faturaları</h2>
        </div>
        <div class="col-auto">
            <a asp-action="AddPurchaseInvoice" class="btn btn-success px-4">+ Yeni Fatura Ekle</a>
        </div>
    </div>


    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
          
            <form asp-action="PurchaseInvoiceList" method="get" class="row row-cols-auto g-3 align-items-end">

                <div style="min-width: 250px;">
                    <label class="form-label fw-bold small text-muted">Tedarikçi</label>
                    <select asp-for="SelectedSupplierId" asp-items="Model.SupplierList" class="form-select">
                        <option value="">Tedarikçi Seçiniz</option>
                    </select>
                </div>

                <div>
                    <label class="form-label fw-bold small text-muted">Başlangıç Tarihi</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div>
                    <label class="form-label fw-bold small text-muted">Bitiş Tarihi</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>

              
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-secondary px-4">Filtrele</button>
                    <a asp-action="PurchaseInvoiceList" class="btn btn-outline-secondary px-3">Temizle</a>
                </div>

            </form>
        </div>
    </div>

  
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4" style="width: 50px;">#</th>
                        <th>Tedarikçi</th>
                        <th>Fatura Tarihi</th>
                        <th>Toplam Tutar</th>
                        <th class="text-center">Durum</th>
                        <th class="text-end pe-4" style="width: 250px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Invoices != null && Model.Invoices.Count > 0)
                    {
                        int i = 1;
                        foreach (var invoice in Model.Invoices)//vm ile değişilecek
                        {
                            <tr>
                                <td class="ps-4 text-muted">@i</td>
                                <td class="fw-medium">@invoice.SupplierName</td>
                                <td class="small">@invoice.OrderDate.ToShortDateString()</td>
                                <td class="fw-bold text-dark">@invoice.TotalPrice.ToString("C2")</td>
                                <td class="text-center">
                                    <span class="badge bg-info-subtle text-info px-3">@invoice.OrderState</span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="EditPurchaseInvoice" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-primary px-3 me-1">Düzenle</a>
                                    <a asp-action="PurchaseInvoiceDetail" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-info px-3">Detaylar</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="bi bi-info-circle me-2"></i>Kriterlere uygun fatura bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>