@model SupplierListVm

@{
    ViewData["Title"] = "Tedarikçi Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Tedarikçi Listesi</h2>
    <a asp-action="AddSupplier" class="btn btn-success">Yeni Tedarikçi Ekle</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>İlgili Kişi</th>
            <th>Telefon</th>
            <th>Email</th>
            <th style="width:180px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model.Suppliers)
        {
            <tr>
                <td>@supplier.SupplierName</td>
                <td>@supplier.ContactName</td>
                <td>@supplier.PhoneNumber</td>
                <td>@supplier.Email</td>
                <td>
                    <a asp-action="SupplierDetail" asp-route-id="@supplier.Id" class="btn btn-info btn-sm">Detaylar</a>
                    <a asp-action="EditSupplier" asp-route-id="@supplier.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <form asp-action="DeleteSupplier" asp-route-id="@supplier.Id" method="post" class="d-inline" onsubmit="return confirm('Tedarikçiyi silmek istediğinize emin misiniz?');">
                     
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>