@model Project.UI.Areas.Manager.Models.AdministrativeVMs.CategoryManagement.CategoryListVm
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h2 class="mb-0">Kategori Yönetimi</h2>
        <a asp-action="AddCategory" class="btn btn-success">+ Yeni Kategori Oluştur</a>
    </div>

    <form method="get" class="row g-2 mb-3" id="categoryFilterForm" autocomplete="off">
        <div class="col-md-4 col-12">
            <select name="parentCategoryId" class="form-select" onchange="this.form.submit()">
                <option value="">Ana Kategori (Tümü)</option>
                @foreach (Project.UI.Areas.Manager.Models.AdministrativeVMs.CategoryManagement.CategoryVm cat in Model.ParentCategories)
                {
                    <option value="@cat.Id" selected="@(Model.SelectedParentCategoryId == cat.Id ? "selected" : null)">
                        @cat.CategoryName
                    </option>
                }
            </select>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Adı</th>
                    <th>Açıklama</th>
                    <th>Üst Kategori</th>
                    <th>Alt Kategori Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            @Html.Partial("CategoryTablePartial", Model.Categories)
        </table>
    </div>
</div>