@model CategoryListVm
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="container-fluid mt-4 px-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="fw-light">Kategori Yönetimi</h2>
        </div>
        <div class="col-auto">
            <a asp-action="AddCategory" class="btn btn-success px-4">+ Yeni Kategori Oluştur</a>
        </div>
    </div>

  
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form method="get" id="categoryFilterForm" autocomplete="off">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-muted">Üst Kategoriye Göre Filtrele</label>
                        <select name="parentCategoryId" class="form-select" onchange="this.form.submit()">
                            <option value="">Ana Kategori (Tümü)</option>
                            @foreach (var cat in Model.ParentCategories)
                            {
                                <option value="@cat.Id" selected="@(Model.SelectedParentCategoryId == cat.Id ? "selected" : null)">
                                    @cat.CategoryName
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm border-0">@TempData["Success"]</div>
    }

 
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Adı</th>
                        <th>Açıklama</th>
                        <th>Üst Kategori</th>
                        <th class="text-center">Alt Kategori Sayısı</th>
                        <th class="text-end pe-4" style="width: 250px;">İşlemler</th>
                    </tr>
                </thead>
             
                @Html.Partial("CategoryTablePartial", Model.Categories)
            </table>
        </div>
    </div>
</div>