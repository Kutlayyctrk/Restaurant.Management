@model List<CategoryVm>

<tbody>
    @foreach (Project.UI.Areas.Manager.Models.AdministrativeVMs.CategoryManagement.CategoryVm cat in Model)
    {
        <tr>
            <td>@cat.CategoryName</td>
            <td>@cat.Description</td>
            <td>@cat.ParentCategoryName</td>
            <td>@cat.SubCategoryCount</td>
            <td>
                <a asp-action="CategoryDetail" asp-route-id="@cat.Id" class="btn btn-info btn-sm">Detaylar</a>
                <a asp-action="EditCategory" asp-route-id="@cat.Id" class="btn btn-primary btn-sm">Düzenle</a>
                <form asp-action="DeleteCategory" asp-route-id="@cat.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</button>
                </form>
            </td>
        </tr>
    }
</tbody>