@model AddRoleVm
@{
    ViewData["Title"] = "Yeni Rol Ekle";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="mb-4 text-center">
        <h2 class="fw-light">Yeni Rol Ekle</h2>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <form asp-action="AddRole" method="post" class="card shadow-sm border-0">
        

        <div class="card-body p-4">
            <div class="mb-0">
                <label asp-for="Name" class="form-label fw-bold small text-muted">Rol Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
        </div>

        <div class="card-footer bg-light border-0 d-flex justify-content-end gap-2 py-3">
            <button type="submit" class="btn btn-success px-4">Kaydet</button>
            <a asp-action="PersonnelManagement" class="btn btn-secondary px-4">Geri</a>
        </div>
    </form>
</div>