@model MenuProductEditVm
@{
    ViewData["Title"] = "Menü Ürünü Düzenle";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="mb-4 text-center">
        <h2 class="fw-light">Menü Ürünü Düzenle</h2>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="EditMenuProduct" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MenuId" class="form-label fw-bold small text-muted">Menü</label>
                        <select asp-for="MenuId" asp-items="Model.MenuList" class="form-select"></select>
                        <span asp-validation-for="MenuId" class="text-danger small"></span>
                    </div>
                    <div class="mb-0">
                        <label asp-for="UnitPrice" class="form-label fw-bold small text-muted">Fiyat</label>
                        <div class="input-group">
                            <input asp-for="UnitPrice" class="form-control" />
                            <span class="input-group-text">₺</span>
                        </div>
                        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ProductId" class="form-label fw-bold small text-muted">Ürün</label>
                        <select asp-for="ProductId" asp-items="Model.ProductList" class="form-select"></select>
                        <span asp-validation-for="ProductId" class="text-danger small"></span>
                    </div>
                    <div class="mb-0">
                        <label class="form-label fw-bold small text-muted d-block">Durum</label>
                        <div class="form-check form-switch mt-2">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="activeSwitch">
                            <label class="form-check-label" for="activeSwitch">Ürün Satışta / Aktif</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 d-flex justify-content-end gap-2 py-3">
            <button type="submit" class="btn btn-primary px-4">Kaydet</button>
            <a asp-action="MenuProductManagement" class="btn btn-secondary px-4">İptal</a>
        </div>
    </form>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <form asp-action="SoftDeleteMenuProduct" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-warning"
                    onclick="return confirm('Bu menü ürününü pasife almak istediğinize emin misiniz?');">
                Pasife Al
            </button>
        </form>
        <form asp-action="HardDeleteMenuProduct" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger"
                    onclick="return confirm('Bu menü ürününü kalıcı olarak silmek istediğinize emin misiniz?');">
                Sil
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}