@model MenuProductListVm
@{
    ViewData["Title"] = "Menü Ürünleri Yönetimi";
}

<div class="container-fluid px-0">
    <div class="product-main-container">
        <div class="row align-items-center mb-4 mt-4">
            <div class="col">
                <div class="product-title fs-3 fw-semibold">Menü Ürünleri Yönetimi</div>
            </div>
            <div class="col-auto">
                <a asp-action="AddMenuProduct" class="btn btn-success">+ Yeni Menü Ürünü Ekle</a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form method="get" class="row g-2 mb-3" id="filterForm">
            <div class="col-md-4">
                <select asp-for="SelectedMenuId" asp-items="Model.MenuList" class="form-select" onchange="document.getElementById('filterForm').submit();">
                    <option value="">Tüm Menüler</option>
                </select>
            </div>
            <div class="col-md-4">
                <input asp-for="SearchTerm" class="form-control" placeholder="Ürün adına göre ara..." oninput="document.getElementById('filterForm').submit();" autocomplete="off" />
            </div>
            <div class="col-md-2">
                <a asp-action="MenuProductManagement" class="btn btn-secondary w-100">Temizle</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Menü</th>
                        <th>Ürün</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Aktif</th>
                        <th style="min-width:180px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MenuProducts)
                    {
                        <tr>
                            <td>@item.MenuName</td>
                            <td>@item.ProductName</td>
                            <td>@item.CategoryName</td>
                            <td>@item.UnitPrice.ToString("C2")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditMenuProduct" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">Düzenle</a>
                                <a asp-action="MenuProductDetail" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detaylar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>