
@model PersonnelListVm

@{
    var filterTypes = Enum.GetValues(typeof(PersonnelFilterType)).Cast<PersonnelFilterType>();
}

<h2>Personel Yönetimi</h2>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <form method="get" asp-action="PersonnelManagement" class="d-flex align-items-center">
        <label for="filter" class="me-2">Filtrele:</label>
        <select id="filter" name="filter" class="form-select me-2" style="width:200px;" onchange="this.form.submit()">
            @foreach (var f in filterTypes)
            {
                if (Model.Filter == f)
                {
                    <option value="@f" selected>@f.ToString()</option>
                }
                else
                {
                    <option value="@f">@f.ToString()</option>
                }
            }
        </select>
    </form>
    <div>
        <a class="btn btn-success me-2" asp-action="AddPersonnel">Yeni Personel Ekle</a>
        <a class="btn btn-primary me-2" asp-action="AddRole">Yeni Rol Ekle</a>
        <a class="btn btn-danger" asp-action="DeleteRole">Rol Sil</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Ad Soyad</th>
            <th>Roller</th>
            <th>İşe Giriş Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Personnel)
        {
            <tr>
                <td>@p.UserName</td>
                <td>@p.Email</td>
                <td>@p.FullName</td>
                <td>@p.Roles</td>
                <td>@(p.HireDate == DateTime.MinValue ? "-" : p.HireDate.ToShortDateString())</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="PersonnelDetail" asp-route-id="@p.Id">Detaylı Görüntüle</a>
                </td>
            </tr>
        }
    </tbody>
</table>