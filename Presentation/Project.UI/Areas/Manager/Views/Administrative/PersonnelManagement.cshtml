@model PersonnelListVm

@{
    ViewData["Title"] = "Personel Yönetimi";
    var filterTypes = Enum.GetValues(typeof(PersonnelFilterType)).Cast<PersonnelFilterType>();
}

<div class="container-fluid mt-4 px-4">
 
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="fw-light">Personel Yönetimi</h2>
        </div>
        <div class="col-auto d-flex gap-2">
            <a class="btn btn-success px-4" asp-action="AddPersonnel">+ Yeni Personel Ekle</a>
            <a class="btn btn-primary px-4" asp-action="AddRole">Yeni Rol Ekle</a>
            <a class="btn btn-outline-danger px-4" asp-action="DeleteRole">Rol Sil</a>
        </div>
    </div>

 
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form method="get" asp-action="PersonnelManagement" id="personnelFilterForm" class="row align-items-center">
                <div class="col-md-3">
                    <label for="filter" class="form-label fw-bold small text-muted">Durum Filtresi</label>
                    <select id="filter" name="filter" class="form-select" onchange="this.form.submit()">
                        @foreach (var f in filterTypes) // PersonnelFilterType enum değerleri
                        {
                            <option value="@f" selected="@(Model.Filter == f ? "selected" : null)">@f.ToString()</option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>


    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-posta</th>
                        <th>Roller</th>
                        <th>İşe Giriş</th>
                        <th class="text-end pe-4" style="width: 250px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PersonnelVm p in Model.Personnel)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-medium">@p.FullName</div>
                            </td>
                            <td class="text-muted small">@p.UserName</td>
                            <td class="small">@p.Email</td>
                            <td>
                             
                                <span class="badge bg-light text-dark border fw-normal px-2 py-1">
                                    <i class="bi bi-shield-lock me-1 text-secondary"></i>@p.Roles
                                </span>
                            </td>
                            <td class="small text-muted">
                                @(p.HireDate == DateTime.MinValue ? "-" : p.HireDate.ToShortDateString())
                            </td>
                            <td class="text-end pe-4">
                                <a class="btn btn-sm btn-outline-primary px-3 me-1" asp-action="EditPersonnel" asp-route-id="@p.Id">Düzenle</a>
                                <a class="btn btn-sm btn-outline-info px-3" asp-action="PersonnelDetail" asp-route-id="@p.Id">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>