@model UnitListVm
@{
    ViewData["Title"] = "Birim Yönetimi";
}

<div class="container-fluid mt-4 px-4">
 
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="fw-light">Birim Yönetimi</h2>
        </div>
        <div class="col-auto">
            <a asp-action="AddUnit" class="btn btn-success px-4">+ Yeni Birim Ekle</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm border-0">@TempData["Success"]</div>
    }

  
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Birim Adı</th>
                        <th>Kısaltma</th>
                        <th class="text-end pe-4" style="width: 250px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UnitVm unit in Model.Units)
                    {
                        <tr>
                            <td class="ps-4 fw-medium text-dark">@unit.UnitName</td>
                            <td>
                             
                                <span class="badge bg-light text-secondary border fw-normal px-2 py-1" style="min-width: 40px;">
                                    @unit.UnitAbbreviation
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="EditUnit" asp-route-id="@unit.Id" class="btn btn-sm btn-outline-primary me-1 px-3">Düzenle</a>
                                <a asp-action="UnitDetail" asp-route-id="@unit.Id" class="btn btn-sm btn-outline-info px-3">Detaylar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>