@model TableEditVm
@{
    ViewData["Title"] = "Masa Düzenle";
}

<style>
    .standard-form .form-control,
    .standard-form .form-select {
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2>Masa Düzenle</h2>
    </div>

    <form asp-action="EditTable" method="post" id="editTableForm" class="card shadow-sm p-4 standard-form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="TableNumber" class="form-label">Masa Numarası</label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>

       

        <div class="d-flex justify-content-between align-items-center border-top pt-3 mt-2">
            <div class="d-flex gap-2">
                <button type="submit" form="softDeleteForm" class="btn btn-warning btn-sm"
                        onclick="return confirm('Bu masayı pasife almak istediğinize emin misiniz?');">
                    Pasife Al
                </button>

                <button type="submit" form="hardDeleteForm" class="btn btn-danger btn-sm"
                        onclick="return confirm('Bu masayı silmek istediğinize emin misiniz?');">
                    Sil
                </button>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" form="editTableForm" class="btn btn-success">Kaydet</button>
                <a asp-action="TableManagement" class="btn btn-secondary">Geri</a>
            </div>
        </div>
    </form>
</div>

<form id="softDeleteForm" asp-action="SoftDeleteTable" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
</form>

<form id="hardDeleteForm" asp-action="HardDeleteTable" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}