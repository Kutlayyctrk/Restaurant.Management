@model UnitCreateVm
@{
    ViewData["Title"] = "Yeni Birim Ekle";
}

<style>
   
    .standard-form .form-control,
    .standard-form .form-select {
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }

  
    .standard-form {
        overflow: hidden;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2>Yeni Birim Ekle</h2>
    </div>

    <form asp-action="AddUnit" method="post" class="card shadow-sm p-4 standard-form">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="UnitName" class="form-label">Birim Adı</label>
            <input asp-for="UnitName" class="form-control" />
            <span asp-validation-for="UnitName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UnitAbbreviation" class="form-label">Kısaltma</label>
            <input asp-for="UnitAbbreviation" class="form-control" />
            <span asp-validation-for="UnitAbbreviation" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2 border-top pt-3 mt-2">
            <button type="submit" class="btn btn-success">Ekle</button>
            <a asp-action="UnitManagement" class="btn btn-outline-secondary">İptal</a>
            <a asp-action="UnitManagement" class="btn btn-secondary">Geri</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}