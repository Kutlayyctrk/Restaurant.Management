@model MenuCreateVm

@{
    ViewData["Title"] = "Yeni Menü Ekle";
}

<style>

    .standard-form .form-control,
    .standard-form .form-select,
    .standard-form input[type="date"] {
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }

  
    .standard-form {
        overflow: hidden;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2>Yeni Menü Ekle</h2>
    </div>

    <form asp-action="AddMenu" method="post" class="card shadow-sm p-4 standard-form">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="MenuName" class="form-label">Menü Adı</label>
            <input asp-for="MenuName" class="form-control" />
            <span asp-validation-for="MenuName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>

        <div class="d-flex justify-content-end gap-2 border-top pt-3 mt-2">
            <button type="submit" class="btn btn-success">Ekle</button>
            <a asp-action="MenuManagement" class="btn btn-outline-secondary">İptal</a>
            <a asp-action="MenuManagement" class="btn btn-secondary">Geri</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}