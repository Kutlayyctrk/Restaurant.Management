@model SaleInvoiceListVm

@{
    ViewData["Title"] = "Satış Faturaları";
}

<div class="container-fluid mt-4 px-4">
  
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="fw-light">Satış Faturaları</h2>
        </div>
        
    </div>

   -
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form asp-action="SaleInvoiceList" method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">Masa Seçimi</label>
                    <select asp-for="SelectedTableId" asp-items="Model.TableList" class="form-select">
                        <option value="">Masa Seçiniz</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small text-muted">Başlangıç Tarihi</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small text-muted">Bitiş Tarihi</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-secondary px-4">Filtrele</button>
                    <a asp-action="SaleInvoiceList" class="btn btn-outline-secondary px-3">Temizle</a>
                </div>
            </form>
        </div>
    </div>

 
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4" style="width: 60px;">#</th>
                        <th>Masa Bilgisi</th>
                        <th>İşlem Tarihi</th>
                        <th>Toplam Tutar</th>
                        <th class="text-center">Durum</th>
                        <th class="text-end pe-4" style="width: 250px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Invoices != null && Model.Invoices.Count > 0)
                    {
                        int i = 1;
                        foreach (var invoice in Model.Invoices)
                        {
                            <tr>
                                <td class="ps-4 text-muted">@i</td>
                                <td class="fw-medium">
                                    <i class="bi bi-shop me-2"></i>@invoice.TableId
                                </td>
                                <td class="small text-muted">@invoice.OrderDate.ToShortDateString()</td>
                                <td class="fw-bold text-success">@invoice.TotalPrice.ToString("C2")</td>
                                <td class="text-center">
                                    <span class="badge bg-success-subtle text-success px-3 py-2">@invoice.OrderState</span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="EditSaleInvoice" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-primary px-3 me-1">Düzenle</a>
                                    <a asp-action="SaleInvoiceDetail" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-info px-3">Detaylar</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <div class="mb-2"><i class="bi bi-receipt fs-1 opacity-25"></i></div>
                                Kriterlere uygun satış faturası bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>