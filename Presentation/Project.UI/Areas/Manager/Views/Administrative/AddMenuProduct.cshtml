@model MenuProductCreateVm
@{
    ViewData["Title"] = "Yeni Menü Ürünü Ekle";
}

<style>
 
    .standard-form .form-control,
    .standard-form .form-select {
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }


    .standard-form {
        overflow: hidden;
    }
</style>

<div class="container mt-4" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2>Yeni Menü Ürünü Ekle</h2>
    </div>

    <form asp-action="AddMenuProduct" method="post" class="card shadow-sm p-4 standard-form">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="MenuId" class="form-label">Menü</label>
            <select asp-for="MenuId" asp-items="Model.MenuList" class="form-select">
                <option value="">Menü Seçiniz...</option>
            </select>
            <span asp-validation-for="MenuId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductId" class="form-label">Ürün</label>
            <select asp-for="ProductId" asp-items="Model.ProductList" class="form-select">
                <option value="">Ürün Seçiniz...</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UnitPrice" class="form-label">Fiyat</label>
            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>

        <div class="d-flex justify-content-end gap-2 border-top pt-3 mt-2">
            <button type="submit" class="btn btn-success">Ekle</button>
            <a asp-action="MenuProductManagement" class="btn btn-outline-secondary">İptal</a>
            <a asp-action="MenuProductManagement" class="btn btn-secondary">Geri</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}