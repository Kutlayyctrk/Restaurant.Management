@model MenuEditVm

@{
    ViewData["Title"] = "Menü Düzenle";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="mb-4 text-center">
        <h2 class="fw-light">Menü Düzenle</h2>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="EditMenu" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body p-4">
            <div class="row g-4">
             
                <div class="col-12">
                    <div class="mb-3">
                        <label asp-for="MenuName" class="form-label fw-bold small text-muted">Menü Adı</label>
                        <input asp-for="MenuName" class="form-control" placeholder="Örn: Yaz Menüsü" />
                        <span asp-validation-for="MenuName" class="text-danger small"></span>
                    </div>
                </div>

        
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold small text-muted">Başlangıç Tarihi</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                    </div>
                    <div class="mb-0">
                        <label class="form-label fw-bold small text-muted d-block">Durum</label>
                        <div class="form-check form-switch mt-2">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="menuActiveSwitch">
                            <label class="form-check-label" for="menuActiveSwitch">Menü Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold small text-muted">Bitiş Tarihi</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 d-flex justify-content-between align-items-center py-3">
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-danger btn-sm"
                        onclick="if(confirm('Menüyü silmek istediğinize emin misiniz?')) { document.getElementById('deleteMenuForm').submit(); }">
                    Menüyü Sil
                </button>
                <button type="button" class="btn btn-outline-warning btn-sm"
                        onclick="if(confirm('Menüyü pasife almak istediğinize emin misiniz?')) { document.getElementById('softDeleteMenuForm').submit(); }">
                    Pasife Al
                </button>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">Güncelle</button>
                <a asp-action="MenuManagement" class="btn btn-secondary px-4">İptal</a>
            </div>
        </div>
    </form>

    <form id="deleteMenuForm" asp-action="HardDeleteMenu" method="post" style="display:none;">
        <input type="hidden" name="id" value="@Model.Id" />
    </form>
    <form id="softDeleteMenuForm" asp-action="SoftDeleteMenu" method="post" style="display:none;">
        <input type="hidden" name="id" value="@Model.Id" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}