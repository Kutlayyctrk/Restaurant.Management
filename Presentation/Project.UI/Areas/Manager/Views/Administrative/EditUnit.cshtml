@model UnitEditVm
@{
    ViewData["Title"] = "Birim Düzenle";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="mb-4 text-center">
        <h2 class="fw-light">Birim Düzenle</h2>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <form asp-action="EditUnit" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-0">
                        <label asp-for="UnitName" class="form-label fw-bold small text-muted">Birim Adı</label>
                        <input asp-for="UnitName" class="form-control" />
                        <span asp-validation-for="UnitName" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-0">
                        <label asp-for="UnitAbbreviation" class="form-label fw-bold small text-muted">Kısaltma</label>
                        <input asp-for="UnitAbbreviation" class="form-control" />
                        <span asp-validation-for="UnitAbbreviation" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light border-0 d-flex justify-content-between align-items-center py-3">
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-warning btn-sm"
                        onclick="if(confirm('Bu birimi pasife almak istediğinize emin misiniz?')) { document.getElementById('softDeleteUnitForm').submit(); }">
                    Pasife Al
                </button>
                <button type="button" class="btn btn-outline-danger btn-sm"
                        onclick="if(confirm('Bu birimi silmek istediğinize emin misiniz?')) { document.getElementById('hardDeleteUnitForm').submit(); }">
                    Birimi Sil
                </button>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">Kaydet</button>
                <a asp-action="UnitManagement" class="btn btn-secondary px-4">Geri</a>
            </div>
        </div>
    </form>

    <!-- Soft Delete Form -->
    <form id="softDeleteUnitForm" asp-action="SoftDeleteUnit" asp-route-id="@Model.Id" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
    <!-- Hard Delete Form -->
    <form id="hardDeleteUnitForm" asp-action="HardDeleteUnit" asp-route-id="@Model.Id" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
</div>