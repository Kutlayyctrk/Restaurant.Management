@model TableListVm
@{
    ViewData["Title"] = "Masa Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Masa Listesi</h2>
    <a asp-action="AddTable" class="btn btn-primary">Yeni Masa Ekle</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Masa No</th>
            <th>Masa Adı</th>
            <th>Garson</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model.Tables)
        {
            <tr>
                <td>@table.TableNumber</td>
                <td>@table.TableName</td>
                <td>@table.WaiterName</td>
                <td>@table.TableStatus</td>
                <td>
                    <a asp-action="TableDetail" asp-route-id="@table.Id" class="btn btn-info btn-sm">Detaylar</a>
                    <a asp-action="EditTable" asp-route-id="@table.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <form asp-action="DeleteTable" asp-route-id="@table.Id" method="post" class="d-inline" onsubmit="return confirm('Masa silinsin mi?');">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>