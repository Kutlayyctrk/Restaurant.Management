@model ProductEditVm
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="mb-4 text-center">
        <h2 class="fw-light">Ürün Düzenle</h2>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <form asp-action="EditProduct" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="card-body p-4">
            <div class="row g-4">
              
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label fw-bold small text-muted">Ürün Adı</label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UnitPrice" class="form-label fw-bold small text-muted">Birim Fiyat</label>
                        <input asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                    </div>
                    <div class="mb-0">
                        <label asp-for="UnitId" class="form-label fw-bold small text-muted">Birim</label>
                        <select asp-for="UnitId" class="form-select" asp-items="ViewBag.UnitList"></select>
                        <span asp-validation-for="UnitId" class="text-danger small"></span>
                    </div>
                </div>

           
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold small text-muted">Kategori</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryList"></select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <label class="form-label fw-bold small text-muted mb-2">Ürün Özellikleri</label>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-check mb-2">
                                <input asp-for="IsSellable" class="form-check-input" />
                                <label asp-for="IsSellable" class="form-check-label small">Satılabilir</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsExtra" class="form-check-input" />
                                <label asp-for="IsExtra" class="form-check-label small">Ekstra mı?</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check mb-2">
                                <input asp-for="CanBeProduced" class="form-check-input" />
                                <label asp-for="CanBeProduced" class="form-check-label small">Üretilebilir</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsReadyMade" class="form-check-input" />
                                <label asp-for="IsReadyMade" class="form-check-label small">Hazır Ürün</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

      
        <div class="card-footer bg-light border-0 d-flex justify-content-between align-items-center py-3">
            <div>
                @if (Model.Status == "Inserted" || Model.Status == "Updated")
                {
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="if(confirm('Pasife almak istediğinize emin misiniz?')) { document.getElementById('softDeleteForm').submit(); }">Pasife Al</button>
                }
                else if (Model.Status == "Deleted")
                {
                    <button type="button" class="btn btn-outline-success btn-sm" onclick="if(confirm('Aktifleştirmek istediğinize emin misiniz?')) { document.getElementById('activateForm').submit(); }">Aktife Al</button>
                }
                <button type="button" class="btn btn-outline-danger btn-sm ms-1" onclick="if(confirm('Kalıcı olarak silmek istediğinize emin misiniz?')) { document.getElementById('hardDeleteForm').submit(); }">Sil</button>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">Kaydet</button>
                <a asp-action="ProductManagement" class="btn btn-secondary px-4">Geri</a>
            </div>
        </div>
    </form>

  
    <form id="softDeleteForm" asp-action="SoftDeleteProduct" asp-route-id="@Model.Id" method="post" style="display:none;"></form>
    <form id="activateForm" asp-action="ActivateProduct" asp-route-id="@Model.Id" method="post" style="display:none;"></form>
    <form id="hardDeleteForm" asp-action="HardDeleteProduct" asp-route-id="@Model.Id" method="post" style="display:none;"></form>
</div>