@model ProductEditVm
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container mt-4" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2>Ürün Düzenle</h2>
    </div>

    <div class="card shadow-sm p-4">
        <form asp-action="EditProduct" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UnitPrice" class="form-label">Birim Fiyat</label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="UnitId" class="form-label">Birim</label>
                    <select asp-for="UnitId" class="form-select" asp-items="ViewBag.UnitList"></select>
                    <span asp-validation-for="UnitId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label">Kategori</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryList"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-6">
                    <div class="form-check">
                        <input asp-for="IsSellable" class="form-check-input" />
                        <label asp-for="IsSellable" class="form-check-label">Satılabilir</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsExtra" class="form-check-input" />
                        <label asp-for="IsExtra" class="form-check-label">Ekstra mı?</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-check">
                        <input asp-for="CanBeProduced" class="form-check-input" />
                        <label asp-for="CanBeProduced" class="form-check-label">Üretilebilir</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsReadyMade" class="form-check-input" />
                        <label asp-for="IsReadyMade" class="form-check-label">Hazır Ürün</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 border-top pt-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="ProductManagement" class="btn btn-outline-secondary">İptal</a>
                <a asp-action="ProductManagement" class="btn btn-secondary">Geri</a>
            </div>
        </form>

        <div class="d-flex justify-content-start gap-2 mt-3 pt-3 border-top">
            @if (Model.Status == "Inserted" || Model.Status == "Updated")
            {
                <form asp-action="SoftDeleteProduct" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Pasife almak istediğinize emin misiniz?');">Pasife Al</button>
                </form>
            }
            else if (Model.Status == "Deleted")
            {
                <form asp-action="ActivateProduct" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Aktifleştirmek istediğinize emin misiniz?');">Aktife Al</button>
                </form>
            }
            <form asp-action="HardDeleteProduct" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Kalıcı olarak silmek istediğinize emin misiniz?');">Sil</button>
            </form>
        </div>
    </div>
</div>